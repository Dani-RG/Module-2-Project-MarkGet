<section class="page container">
  <h1  class="section-title">New account</h1>

  <form class="form-bar" action="/auth/signup" method="POST">
  <div>
      <label>Username:</label>
  </div>
  <div>
        <input type="text" name="username" placeholder="Mr.Potato" />
  </div>
  <div>
      <label>Email:</label>
  </div>
  <div>
        <input type="email" name="email" placeholder="banana@kiwi.com" />
  </div>
  <div>
      <label>Password:</label>
  </div>
  <div>
        <input type="password" name="password" placeholder="********" />
  </div>
        {{#if error}}
        <p style="color: red;">{{error}}</p>
        {{/if}}
  
      <button class="button-1" type="submit">Create</button>
    </form>

</section>