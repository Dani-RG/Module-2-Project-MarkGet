<section class="page container">
  <h2 class="section-title">Log in</h2>

  <form class="form-bar" action="/auth/login" method="POST">
    <div>
      <label>Email:</label>
    </div>
    <div>
      <input type="email" name="email" placeholder="banana@kiwi.com" />
    </div>
    <div>
      <label>Password:</label>
    </div>
    <div>
      <input type="password" name="password" placeholder="********" />
    </div> 
      {{#if error}}
      <p style="color:rgb(218, 90, 90)">{{ error }}</p>
      {{/if}}
      <button class="button-1" type="submit">Log in</button>
  </form>
  
</section>