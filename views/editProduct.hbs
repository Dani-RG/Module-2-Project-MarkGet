<section class="page container">
  <h2 class="section-title">Editing this product: {{product.name}}</h2>
  <div class="page-content">
    <form method="POST" action="/articles/edit/{{product._id}}">

      <label>Category</label>
      <input required type="text" name="category" value="{{product.category}}"/>

      <label>Name</label>
      <input required type="text" name="name" value="{{product.name}}"/>

      <label>Image</label>
      <input required type="text" name="image" value="{{product.image}}"/>

      <button type="submit">Save changes</button>
    </form>
  </div>
</section>