
<section class="section-detail-product">
  <div>
        <h1>{{product.name}}</h1>
        <h3>{{product.format}}</h3>
        <img class="img-detail-product" src="{{product.image}}" alt="{{product.name}}">
        <div>
          {{#if showAdminBtns}}
            <form method="GET" action="/articles/edit/{{product._id}}">
              <button class="button-1" type="submit" >Edit product</button>
            </form>
          {{/if}}
        </div>
  </div>
</section>
<section class="section-detail">
  <h2>Products available in the following supermarkets</h2>
  <div class="product-container">
    {{#each productArticles}}
      {{#if this.isCheapest}}
        <div class="product-info cheapest">
      {{else}}
        <div class="product-info">
      {{/if}}
        <img class="img-detail-logo" src="{{this.market.logo}}" alt="{{this.market.name}}">
        <h4>Price: {{this.price}} euros</h4>
      </div>
      <div>
        <form method="POST" action="/highlighted/{{_id}}">
        <button type="submit" >Highlight</button>
        </form>
      </div>
      <div>
        {{#if this.userAdmin}}
          <form method="GET" action="/articles/editArticle/{{_id}}">
            <button class="button-1" type="submit" >Edit price</button>
          </form>
        {{/if}}
      </div>
      <div>
        {{#if this.userAdmin}}
          <form method="POST" action="/articles/delete/{{_id}}">
            <button class="button-1" type="submit" >Delete</button>
          </form>
        {{/if}}
      </div>
    {{/each}}
  </div>
</section>