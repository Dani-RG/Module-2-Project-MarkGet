<h2>Upload a new article</h2>
<form method="POST" action="/articles/new">
    <select name="product">
       {{#each allProducts}} 
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
        <select name="image">
       {{#each allProducts}} 
        <option value="{{_id}}">{{image}}</option>
        {{/each}}
    </select>
    <select name="market">
        {{#each allMarkets}} 
        <option value="{{_id}}">{{name}} </option>
        {{/each}}
    </select>
        <select name="codePostal">
        {{#each allMarkets}} 
        <option value="{{postalCode}}">{{postalCode}}</option>
        {{/each}}
    </select>
    <label>New price</label>
    <input required type="number" name="price"/>
    <button type="submit">Upload it</button>
</form>