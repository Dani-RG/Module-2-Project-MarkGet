<h1>Articles</h1>
<!--UPDATE BELOW KEYS / INPUTS TO ACCORDING ARTICLE MODEL-->
<div>
  {{#each article }}
  <h2>{{this.product.name}}</h2>
  <img src="{{this.product.image}}" alt={{this.product.name}}>
  <h2>Price: {{price}} euros $</h2>
  <p>{{this.product.format}}</p>
  <p>{{this.market.name}}</p>
  <p><a href="/articles/{{_id}}">See article</a></p>
  <p><a href="/articles/edit/{{article._id}}">Edit article</a></p>
  {{/each}}
</div>